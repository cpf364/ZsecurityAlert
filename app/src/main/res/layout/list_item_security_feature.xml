<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/featureIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_checkmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/featureTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="App Security"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/featureIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/featureDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No malware detected"

        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/featureIcon"
        app:layout_constraintTop_toBottomOf="@id/featureTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
